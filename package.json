{
  "name": "@at0g/hooks",
  "engines": {
    "node": "12.X.X"
  },
  "version": "0.0.1",
  "description": "A collection of useful react hooks",
  "main": "dist/lib/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "README.md",
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "build:cjs": "BABEL_ENV=cjs babel -d dist/lib src --ignore 'src/**/*.spec.js'",
    "build:esm": "BABEL_ENV=esm babel -d dist/esm src --ignore 'src/**/*.spec.js'",
    "clean": "rm -rf dist",
    "test": "jest",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/at0g/hooks.git"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "author": "Ben Daley <ben@fanboy.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/at0g/hooks/issues"
  },
  "homepage": "https://github.com/at0g/hooks#readme",
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@testing-library/react-hooks": "^3.1.1",
    "babel-jest": "^24.9.0",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.11.0"
  },
  "jest": {
    "verbose": true,
    "bail": true,
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/node_modules/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
