{
  "name": "@upr/hooks",
  "engines": {
    "node": "12.X.X"
  },
  "version": "0.1.0",
  "description": "A collection of useful react hooks",
  "main": "dist/lib/index.js",
  "module": "dist/esm/index.js",
  "unpkg": "dist/umd/hooks.production.js",
  "sideEffects": false,
  "files": [
    "CHANGELOG.md",
    "README.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "build": "npm run clean && mkdir dist && npm run build:cjs && npm run build:esm && npm run build:umd",
    "build:babel": "babel src --ignore 'src/**/*.spec.js' --ignore 'src/**/*.stories.js'",
    "build:cjs": "BABEL_ENV=cjs npm run build:babel -- -d dist/lib",
    "build:esm": "BABEL_ENV=esm npm run build:babel -- -d dist/esm",
    "build:umd": "webpack -p --env=production --output-filename=hooks.production.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "prepare": "npm run build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "deploy-storybook": "storybook-to-ghpages --out=.out"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/at0g/hooks.git"
  },
  "keywords": [
    "react",
    "hooks"
  ],
  "author": "upr@fanboy.io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/at0g/hooks/issues"
  },
  "homepage": "https://github.com/at0g/hooks#readme",
  "peerDependencies": {
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-proposal-export-default-from": "^7.5.2",
    "@babel/plugin-transform-modules-commonjs": "^7.6.0",
    "@babel/preset-env": "^7.6.3",
    "@storybook/addon-actions": "^5.2.5",
    "@storybook/addon-links": "^5.2.5",
    "@storybook/addons": "^5.2.5",
    "@storybook/react": "^5.2.5",
    "@storybook/storybook-deployer": "^2.8.1",
    "@testing-library/react-hooks": "^3.1.1",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0",
    "react-test-renderer": "^16.11.0",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "optionalDependencies": {
    "husky": "^3.0.9",
    "pretty-quick": "^2.0.0"
  },
  "jest": {
    "bail": true,
    "clearMocks": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "!**/index.js",
      "!**/*.stories.js",
      "!**/node_modules/**"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "es5",
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2
        }
      }
    ]
  }
}
